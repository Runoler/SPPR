@{
    ViewBag.Title = "Index";
}

<h1>@ViewData["LabNum"]</h1>
<h2>Список</h2>
<ol type="A">
    @for (int i = 1; i <= 5; i++)
    {
        <li>Элемент @i списка</li>
    }
</ol>
<hr>
<h2>Форма</h2>
<form action="" method="POST">
    <div class="mb-3 offset-sm-2">
        <select class="form-select" id="selectList" name="selDemo" asp-items="ViewBag.ItemList"></select>
    </div>

    <div class="form-check offset-sm-2">
        <input class="form-check-input" type="checkbox" name="boxe1" />
        <label class="form-check-label">Чек-бокс 1</label>
        <br>
        <input class="form-check-input" type="checkbox" name="boxe2" />
        <label class="form-check-label">Чек-бокс 2</label>
    </div>

    <div class="offset-sm-2">
        <table>
            <tr>
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="radio-1" value="option1" name="radios" />
                        <label class="form-check-label" for="radio-1">Радио-1</label>
                    </div>
                </td>
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="radio-2" value="option2" name="radios" />
                        <label class="form-check-label" for="radio-2">Радио-2</label>
                    </div>
                </td>
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="radio-3" value="option3" name="radios" />
                        <label class="form-check-label" for="radio-3">Радио-3</label>
                    </div>
                </td>
            </tr>
        </table>
    </div>

    <div class="row mb-3">
        <label for="login" class="col-sm-2 col-form-label">Логин:</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" id="login" placeholder="Введите имя" name="loginInput" />
        </div>
    </div>
    <div class="row mb-3">
        <label for="password" class="col-sm-2 col-form-label">Пароль:</label>
        <div class="col-sm-10">
            <input class="form-control" type="password" id="password" placeholder="Введите пароль" name="passwordInput" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Отправить</button>
</form>